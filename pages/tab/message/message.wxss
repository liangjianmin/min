/* pages/tab/message/message.wxss */
page{
  overflow: hidden
}
.message-view{
  position: fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  overflow: hidden;
}

.message-item {
  margin-left: 25rpx;
  padding: 24rpx 24rpx 24rpx 0;
}

.message-avar {
  height: 68rpx;
  width: 68rpx;
  border-radius: 50% 50%;
}

.message-l-view {
  margin-left: 24rpx;
}

.message-c {
  color: #515559;
  font-size: 28rpx;
}

.message-t {
  font-size: 22rpx;
  color: #8a9299;
  margin-top: 4rpx;
}

.message-r {
  font-size: 22rpx;
  text-align: right;
}

.message-r-t {
  color: #adb6bf;
  padding-bottom: 12rpx;
}

.message-r-n {
  color: #fff;
  padding: 0rpx 10rpx;
  border-radius: 15rpx;
  display: inline;
  background-color: #fc4c4c;
}
